{
  "name": "@kentico/kontent-smart-link",
  "version": "1.1.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kentico/kontent-smart-link.git"
  },
  "description": "Kontent Smart Link SDK allowing to automatically inject [smart links](https://docs.kontent.ai/tutorials/develop-apps/build-strong-foundation/set-up-editing-from-preview#a-using-smart-links) to Kentico Kontent according to manually specified [HTML data attributes](https://www.w3schools.com/tags/att_data-.asp) on your website. It also lets you connect your website with Web Spotlight.",
  "main": "./commonjs/index.js",
  "types": "./commonjs/index.d.ts",
  "module": "./es/index.js",
  "jsnext:main": "./es/index.js",
  "files": [
    "dist",
    "commonjs",
    "es"
  ],
  "scripts": {
    "clean": "rimraf commonjs dist es",
    "lint": "eslint {src,test-browser}/**/*.{js,ts,tsx}",
    "lint:fix": "npm run lint -- --fix",
    "dev": "concurrently \"npm run build:commonjs:watch\" \"npm run build:umd:watch\" \"npm run build:es:watch\"",
    "test:browser": "karma start karma.conf.js",
    "test:browser:once": "npm run test:browser -- --single-run",
    "webpack:dev": "webpack --mode development --config webpack.config.js --progress --colors",
    "webpack:dev:watch": "npm run webpack:dev -- --watch",
    "webpack:prod": "webpack --mode production --config webpack.config.js --progress --colors",
    "webpack:prod:watch": "npm run webpack:prod -- --watch",
    "build": "npm run build:commonjs && npm run build:umd && npm run build:es",
    "build:umd": "npm run webpack:dev && npm run webpack:prod",
    "build:umd:watch": "concurrently \"npm run webpack:dev:watch\" \"npm run webpack:prod:watch\"",
    "build:commonjs": "tsc -m commonjs --outDir commonjs --p tsconfig.json",
    "build:commonjs:watch": "npm run build:commonjs -- -w",
    "build:es": "tsc -m es2015 --outDir es --p tsconfig.json",
    "build:es:watch": "npm run build:es -- -w",
    "bundle-stats": "npm run build:umd && webpack-bundle-analyzer dist/stats.json",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm run lint && npm run test:browser:once"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "npm run lint:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "Kentico Kontent Javascript",
    "Kentico Kontent Typescript",
    "Kentico Kontent",
    "Kontent Preview",
    "Kontent SDK",
    "Kontent"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Kentico/kontent-smart-link/issues"
  },
  "homepage": "https://github.com/Kentico/kontent-smart-link#readme",
  "devDependencies": {
    "@types/jasmine": "3.5.14",
    "@typescript-eslint/eslint-plugin": "3.0.1",
    "@typescript-eslint/parser": "3.0.1",
    "autoprefixer": "9.8.4",
    "concurrently": "^5.3.0",
    "css-loader": "3.6.0",
    "cssnano": "4.1.10",
    "eslint": "7.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "jasmine-core": "3.6.0",
    "karma": "5.2.0",
    "karma-chrome-launcher": "3.1.0",
    "karma-cli": "2.0.0",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "karma-jasmine": "4.0.1",
    "karma-jasmine-html-reporter": "1.5.4",
    "karma-typescript": "5.1.0",
    "karma-typescript-es6-transform": "5.1.0",
    "lint-staged": "10.2.6",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "4.14.1",
    "postcss-loader": "3.0.0",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "sass-loader": "8.0.2",
    "style-loader": "1.2.1",
    "ts-loader": "7.0.5",
    "typescript": "3.9.3",
    "webpack": "4.43.0",
    "webpack-bundle-analyzer": "3.8.0",
    "webpack-cli": "3.3.11",
    "webpack-merge": "4.2.2"
  }
}
